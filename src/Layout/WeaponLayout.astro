---
// --- PROPS ---
const { data } = Astro.props;
import MainLayout from "./MainLayout.astro";

// Correctly access the main profile object from the JSON
const profile = data.weaponProfile;

// Destructure ALL data points for use in the template
const {
    title, image, id, aliases, type, manufacturer, status, cost, specialAbility,
    baseStats, keyRelationships, legendaryOrigin, designAndMaterials,
    weaponPhilosophy, manufacturingIntel, tacticalAssessment,
    acquisitionIntel, fieldTestimonials, crewSynergyAssessment
} = profile;

// Helper function to normalize stat values for the visual bars (0-100 scale)
const normalizeStat = (stat, value) => {
    const maxValues = { attackSpeed: 15, damage: 1500, range: 300, reloadSpeed: 5, mods: 5 };
    if (stat === 'reloadSpeed') { // Invert for reload speed where lower is better
        return Math.max(0, (1 - (parseFloat(value) / maxValues[stat])) * 100);
    }
    return Math.min(100, (parseFloat(value) / maxValues[stat]) * 100);
};
---

<MainLayout>
    <div class="dossier-container">
        <div class="grid-background"></div>
        <div class="hud-frame top-left"></div>
        <div class="hud-frame top-right"></div>
        <div class="hud-frame bottom-left"></div>
        <div class="hud-frame bottom-right"></div>

        <!-- HERO HEADER -->
        <header class="dossier-header">
            <div class="header-content">
                <div class="header-title">
                    <h1 data-text={title}>{title}</h1>
                    <div class="aliases">{aliases.join(' // ')}</div>
                </div>
                <div class="header-tags">
                    <div class="tag-item"><span>ASSET ID</span>{id}</div>
                    <div class="tag-item"><span>TYPE</span>{type}</div>
                    <div class="tag-item"><span>MANUFACTURER</span>{manufacturer}</div>
                    <div class="tag-item"><span>STATUS</span>{status}</div>
                </div>
                <div class="special-ability">
                    <strong>SPECIAL ABILITY //</strong> {specialAbility}
                </div>
            </div>
        </header>

        <!-- VISUAL & TECHNICAL READOUT -->
        <section class="readout-section">
            <div class="weapon-visual">
                <img src={image} alt={`Showcase image of ${title}`} />
            </div>
            <div class="technical-specs">
                <div class="stats-block">
                    <h4>PERFORMANCE METRICS</h4>
                    <div class="stats-grid">
                        {Object.entries(baseStats).map(([key, value]) => {
                            const label = key.replace(/([A-Z])/g, ' $1').toUpperCase();
                            const percentage = normalizeStat(key, value);
                            return (
                                 <div class="stat-item">
                                    <span class="stat-label">{label}</span>
                                    <div class="stat-bar-bg">
                                        <div class="stat-bar-fill" style={`width: ${percentage}%`}></div>
                                    </div>
                                    <span class="stat-value">{value}</span>
                                </div>
                            )
                        })}
                    </div>
                </div>
                <div class="materials-block">
                    <h4>DESIGN & MATERIALS</h4>
                    <p><strong>CHASSIS:</strong> {designAndMaterials.materials}</p>
                    <p><strong>AMMUNITION:</strong> {designAndMaterials.ammunitionType}</p>
                </div>
                 <div class="mods-block">
                    <h4>COMPATIBLE MODIFICATIONS</h4>
                    <div class="mods-list">
                        {designAndMaterials.compatibleMods.map(mod => (
                            <div class="mod-item">
                                <strong>{mod.slot}: <span>{mod.mod}</span></strong>
                                <p>{mod.description}</p>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </section>

        <!-- LEGENDARY ORIGIN -->
        {legendaryOrigin && (
            <section class="origin-section">
                <h2 class="section-title">CLASSIFIED // GIG RECORD: {legendaryOrigin.gigTitle}</h2>
                <div class="origin-content">
                    <div class="origin-field"><span class="field-label">DATE</span><span class="field-value">{legendaryOrigin.date}</span></div>
                    <div class="origin-field"><span class="field-label">CLIENT</span><span class="field-value">{legendaryOrigin.client}</span></div>
                    <div class="origin-field"><span class="field-label">OBJECTIVE</span><span class="field-value">{legendaryOrigin.objective}</span></div>
                    <div class="origin-field"><span class="field-label">OUTCOME</span><span class="field-value">{legendaryOrigin.outcome}</span></div>
                    <div class="origin-field"><span class="field-label">ASSET FATE</span><span class="field-value">{legendaryOrigin.mercFate}</span></div>
                    <div class="origin-field"><span class="field-label">REPUTATION IMPACT</span><span class="field-value">{legendaryOrigin.reputationImpact}</span></div>
                    <blockquote class="origin-feedback">
                        <span class="feedback-label">// DECRYPTED TESTIMONIAL</span>
                        {legendaryOrigin.mercFeedback}
                    </blockquote>
                </div>
            </section>
        )}

        <!-- MAIN DATA GRID -->
        <div class="main-grid">
            <!-- COLUMN 1 -->
            <div class="grid-column">
                <div class="data-block">
                    <h4>WEAPON PHILOSOPHY</h4>
                    <p>{weaponPhilosophy.concept}</p>
                </div>
                <div class="data-block">
                    <h4>MANUFACTURING INTEL</h4>
                    <p><strong>CREATOR:</strong> {manufacturingIntel.creator}</p>
                    <p><em>{manufacturingIntel.creatorReputation}</em></p>
                    <p><strong>HISTORY:</strong> {manufacturingIntel.developmentHistory}</p>
                    <p><strong>PRODUCTION DATE:</strong> {manufacturingIntel.productionDate}</p>
                </div>
                <div class="data-block">
                    <h4>CREW SYNERGY ASSESSMENT</h4>
                    <p>{crewSynergyAssessment.analysis}</p>
                </div>
            </div>
            <!-- COLUMN 2 -->
            <div class="grid-column">
                {keyRelationships && (
                    <div class="data-block threat-block">
                        <h4>THREAT ANALYSIS // ACTIVE NEMESIS</h4>
                        <p><strong>{keyRelationships.nemesis.split('(')[0]}</strong></p>
                        <p><em>{keyRelationships.nemesis.split('). ')[1]}</em></p>
                    </div>
                )}
                <div class="data-block">
                    <h4>ACQUISITION INTEL</h4>
                    <p><strong>AVAILABILITY:</strong> {acquisitionIntel.marketAvailability}</p>
                    <p><strong>RUMORS:</strong> {acquisitionIntel.rumoredLocation}</p>
                    <div class="cost-block">
                        <span>{cost}</span>
                    </div>
                </div>
                <div class="data-block">
                    <h4>TACTICAL ASSESSMENT</h4>
                    <h5 class="sub-title strengths">STRENGTHS</h5>
                    <ul>{tacticalAssessment.strengths.map(s => <li>{s}</li>)}</ul>
                    <h5 class="sub-title weaknesses">WEAKNESSES</h5>
                    <ul>{tacticalAssessment.weaknesses.map(w => <li>{w}</li>)}</ul>
                </div>
            </div>
            <!-- COLUMN 3 -->
            <div class="grid-column">
                 <div class="data-block">
                    <h4>FIELD TESTIMONIALS</h4>
                    <div class="testimonial-log">
                        {fieldTestimonials && fieldTestimonials.length > 0 && fieldTestimonials.map(testimonial => (
                            testimonial.mercName ? (
                                <div class="log-entry">
                                    <div class="log-header">
                                        <h5>OPERATOR: {testimonial.mercName}</h5>
                                        <span>RATING: {testimonial.rating}/5</span>
                                    </div>
                                    <p class="context"><strong>CONTEXT:</strong> {testimonial.context}</p>
                                    <blockquote>{testimonial.feedback}</blockquote>
                                </div>
                            ) : null
                        ))}
                         {(!fieldTestimonials || fieldTestimonials.length === 0 || !fieldTestimonials[0].mercName) && (
                            <p class="no-data">// NO VERIFIED FIELD DATA AVAILABLE //</p>
                        )}
                    </div>
                </div>
                <div class="data-block">
                    <h4>OPERATOR PROFILE</h4>
                    <p><strong>RECOMMENDED ROLES:</strong> {tacticalAssessment.recommendedRoles}</p>
                    <p><strong>MASTERY ARCHETYPE:</strong> {tacticalAssessment.masteryArchetype}</p>
                </div>
            </div>
        </div>
    </div>
</MainLayout>


<style>
    @import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@500;700&family=Orbitron:wght@900&display=swap');

    :root {
        --cyber-yellow: #fcee0a;
        --cyber-cyan: #00f0ff;
        --cyber-red: #ef4444;
        --cyber-green: #22c55e;
        --background-dark: #0a0a0f;
        --background-med: #111118;
        --text-light: #e1e1e1;
        --text-dark: #8c8c8c;
        --border-color: rgba(0, 240, 255, 0.2);
        --font-body: 'Rajdhani', sans-serif;
        --font-header: 'Orbitron', sans-serif;
    }

    /* --- BASE & AESTHETICS --- */
    .dossier-container { font-family: var(--font-body); color: var(--text-light); max-width: 1800px; margin: 0 auto; padding: 2rem 4rem; position: relative; }
    .grid-background, .hud-frame { position: fixed; pointer-events: none; }
    .grid-background { top: 0; left: 0; width: 100vw; height: 100vh; background-image: linear-gradient(var(--border-color) 1px, transparent 1px), linear-gradient(90deg, var(--border-color) 1px, transparent 1px); background-size: 40px 40px; opacity: 0.1; animation: pan 60s linear infinite; z-index: -1; }
    @keyframes pan { 0% { background-position: 0 0; } 100% { background-position: 1200px 600px; } }
    .hud-frame { width: 40px; height: 40px; border-color: var(--cyber-cyan); opacity: 0.4; z-index: 10; }
    .top-left { top: 1.5rem; left: 1.5rem; border-top: 2px solid; border-left: 2px solid; }
    .top-right { top: 1.5rem; right: 1.5rem; border-top: 2px solid; border-right: 2px solid; }
    .bottom-left { bottom: 1.5rem; left: 1.5rem; border-bottom: 2px solid; border-left: 2px solid; }
    .bottom-right { bottom: 1.5rem; right: 1.5rem; border-bottom: 2px solid; border-right: 2px solid; }

    /* --- HEADER --- */
    .dossier-header { border: 1px solid var(--border-color); background: var(--background-med); padding: 2rem; margin-bottom: 3rem; }
    .dossier-header h1 { font-family: var(--font-header); font-size: 5rem; font-weight: 900; color: var(--cyber-yellow); text-transform: uppercase; letter-spacing: 5px; text-shadow: 0 0 20px var(--cyber-yellow); margin: 0; line-height: 1; position: relative; }
    .aliases { font-size: 1.2rem; color: var(--text-dark); text-transform: uppercase; letter-spacing: 3px; margin: 1rem 0 2rem 0; }
    .header-tags { display: flex; flex-wrap: wrap; gap: 1rem; margin-bottom: 2rem; }
    .tag-item { background: var(--border-color); padding: 0.5rem 1rem; clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 100%, 0% 100%); }
    .tag-item span { color: var(--cyber-cyan); font-weight: 700; margin-right: 0.5rem; }
    .special-ability { font-size: 1.2rem; font-style: italic; color: var(--text-light); background: rgba(0, 240, 255, 0.05); padding: 1rem; }
    .special-ability strong { color: var(--cyber-cyan); }

    /* --- VISUAL & TECHNICAL READOUT --- */
    .readout-section { display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; align-items: flex-start; margin-bottom: 3rem; }
    .weapon-visual img { width: 100%; object-fit: contain; filter: drop-shadow(0 0 20px rgba(0, 240, 255, 0.4)); animation: float 6s ease-in-out infinite; }
    @keyframes float { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-10px); } }
    .technical-specs h4 { font-family: var(--font-header); font-size: 1.2rem; color: var(--cyber-cyan); margin: 0 0 1rem 0; text-transform: uppercase; }
    .stats-grid { display: flex; flex-direction: column; gap: 1rem; }
    .stat-item { display: grid; grid-template-columns: 120px 1fr 60px; align-items: center; gap: 1rem; }
    .stat-label { font-size: 0.9rem; color: var(--text-dark); text-transform: uppercase; }
    .stat-bar-bg { background: rgba(0,0,0,0.4); border: 1px solid var(--border-color); height: 6px; }
    .stat-bar-fill { background: var(--cyber-cyan); height: 100%; box-shadow: 0 0 8px var(--cyber-cyan); }
    .stat-value { font-size: 1rem; font-weight: 700; text-align: right; }
    .materials-block, .mods-block { margin-top: 2rem; }
    .materials-block p { margin: 0.5rem 0; line-height: 1.6; color: var(--text-dark); }
    .mods-list .mod-item { margin-bottom: 1rem; }
    .mod-item strong { color: var(--text-light); }
    .mod-item span { color: var(--cyber-yellow); }
    .mod-item p { margin: 0.25rem 0 0 0; color: var(--text-dark); font-style: italic; }

    /* --- LEGENDARY ORIGIN --- */
    .section-title { font-family: var(--font-header); text-align: center; font-size: 1.5rem; color: var(--cyber-yellow); text-shadow: 0 0 10px var(--cyber-yellow); margin-bottom: 2rem; background: var(--background-med); padding: 1rem; border: 1px solid var(--border-color); }
    .origin-section { margin-bottom: 3rem; }
    .origin-content { border: 1px solid var(--border-color); padding: 2rem; }
    .origin-field { display: grid; grid-template-columns: 200px 1fr; gap: 1rem; padding: 0.75rem 0; border-bottom: 1px dashed var(--border-color); }
    .field-label { font-weight: 700; color: var(--cyber-cyan); text-transform: uppercase; }
    .field-value { color: var(--text-dark); }
    .origin-feedback { margin: 1.5rem 0 0 0; padding: 1rem; border-left: 3px solid var(--cyber-yellow); font-style: italic; background: rgba(0,0,0,0.2); }
    .feedback-label { display: block; font-style: normal; font-weight: 700; color: var(--cyber-yellow); margin-bottom: 0.5rem; text-transform: uppercase; }
    
    /* --- MAIN DATA GRID --- */
    .main-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; }
    .data-block { background: var(--background-med); border: 1px solid var(--border-color); padding: 1.5rem; margin-bottom: 2rem; height: fit-content; }
    .data-block h4 { font-family: var(--font-header); font-size: 1.2rem; color: var(--cyber-cyan); margin: 0 0 1rem 0; text-transform: uppercase; }
    .data-block p { margin: 0.5rem 0 1rem 0; line-height: 1.7; color: var(--text-dark); }
    .data-block p strong { color: var(--text-light); }
    .data-block em { font-style: italic; }

    .threat-block { border-color: var(--cyber-red); background: rgba(239, 68, 68, 0.05); }
    .threat-block h4 { color: var(--cyber-red); }
    .cost-block { margin-top: 1rem; text-align: center; }
    .cost-block span { font-size: 1.5rem; font-weight: 700; color: var(--cyber-yellow); }

    .sub-title { font-size: 1rem; font-weight: 700; text-transform: uppercase; letter-spacing: 1px; padding-bottom: 0.5rem; margin: 1.5rem 0 1rem 0; }
    .sub-title.strengths { color: var(--cyber-green); }
    .sub-title.weaknesses { color: var(--cyber-red); }
    .data-block ul { list-style: none; padding: 0; margin: 0; }
    .data-block li { margin-bottom: 0.5rem; }
    .data-block li::before { margin-right: 0.5rem; }
    .strengths li::before { content: '++'; color: var(--cyber-green); }
    .weaknesses li::before { content: '--'; color: var(--cyber-red); }
    
    .testimonial-log .log-entry { margin-bottom: 2rem; border-left: 2px solid var(--cyber-yellow); padding-left: 1rem; }
    .log-header { display: flex; justify-content: space-between; align-items: baseline; }
    .log-header h5 { font-size: 1.1rem; color: var(--text-light); margin: 0; }
    .log-header span { color: var(--text-dark); font-size: 0.9rem; }
    .context { font-size: 0.9rem; color: var(--text-dark); margin-bottom: 0.5rem; }
    .log-entry blockquote { margin: 0; padding: 0.75rem; background: rgba(0,0,0,0.2); font-style: italic; color: var(--text-dark); }
    .no-data { font-style: italic; color: var(--text-dark); text-align: center; }

    /* --- RESPONSIVE --- */
    @media (max-width: 1400px) { .main-grid { grid-template-columns: 1fr 1fr; } }
    @media (max-width: 992px) { .readout-section, .main-grid { grid-template-columns: 1fr; } }
    @media (max-width: 768px) { .dossier-container { padding: 1rem; } .dossier-header h1 { font-size: 3rem; } }
</style>